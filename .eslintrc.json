{
  "env": {
    "commonjs": true,
    "es6": true,
    "node": true
  },
  "extends": ["prettier", "airbnb-base"],
  "plugins": ["prettier"],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "rules": {
    "prettier/prettier": "error",
    "no-console": "warn",
    "func-names": "warn",
    "no-unused-vars": "warn",
    "comma-dangle": "off",
    "consistent-return": "off",
    "prefer-arrow-callback": "off",
    "camelcase": "off",
    "no-shadow": "off"
  }
}
