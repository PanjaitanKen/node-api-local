    style(type="text/css").
      /* General */
      html {
        scroll-behavior: smooth;
      }

      /* Documents webview */
      p.description-documents {
        font-family: 'Circular Std', sans-serif;
        font-size: 14px;
        color: #4F4F4F;
      }

      /* Carousel Image */
      .carousel-indicators [data-bs-target].active {
        background: #006BEB !important;
        width: 32px !important;
        border-radius: 10px !important;
      }

      span.carousel-control-prev-icon {
        background-image: url('/assets/webviews/left-arrow.png');
      }

      span.carousel-control-next-icon {
        background-image: url('/assets/webviews/right-arrow.png');
      }

      @media screen and (max-width: 768px) {
        .carousel-control-next span,
        .carousel-control-prev span {
          display: none;
        }
      }

      @media screen and (min-width: 768px) {
        .carousel-control-next:focus,
        .carousel-control-next:hover,
        .carousel-control-prev:focus,
        .carousel-control-prev:hover {
          background: #FFFFFF !important;
        }

        .carousel-item img {
          height: 70vh;
        }
      }

      /* Modal Image */
      .modal-image {
        display: none;
        position: fixed;
        z-index: 2;
        padding-top: 20vh;
        left: 0;
        top: 0;
        width: 100%;
        height: 100%;
        overflow: auto;
        background-color: black;
      }

      .modal-image-content {
        width: 100%;
        position: relative;
      }

      .modal-image-close {
        color: white;
        position: absolute;
        top: 0;
        left: 25px;
        font-size: 35px;
        font-weight: bold;
      }

      .modal-image-close:hover,
      .modal-image-close:focus {
        color: #999;
        text-decoration: none;
        cursor: pointer;
      }

      .modal-image-slides { display: none; }
      .modal-image-cursor { cursor: pointer; }
      .modal-image-next { right: 0; }

      .modal-image-prev,
      .modal-image-next {
        cursor: pointer;
        position: absolute;
        top: 50%;
        width: auto;
        padding: 10px;
        margin-top: -25px;
        color: white;
        font-weight: bold;
        font-size: 20px;
        transition: 0.6s ease;
        border-radius: 0 3px 3px 0;
        user-select: none;
        -webkit-user-select: none;
      }

      .modal-image-container-dots {
        text-align: center;
        margin: 18px 0;
      }

      .modal-image-dots.active {
        background: #006BEB !important;
        width: 32px !important;
        border-radius: 10px !important;
      }

      @media screen and (max-width: 768px) {
        .modal-image-zoom:hover {
          transform: scale(1.5);
        }

        .modal-image-container-dots {
          position: absolute;
          bottom: 0;
          left: 50%;
          transform: translate(-50%, 0);
        }
      }

      /* Table */
      table, th, td {
        border: 1px solid #CCCCCC;
        border-collapse: collapse;
      }

      th, td {
        font-size: 12px;
        padding: 10px;
        color: #4F4F4F;
        text-align: center;
        font-family: 'Circular Std', sans-serif;
      }

    block styles
