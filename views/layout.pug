    block content
    
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/js/bootstrap.bundle.min.js" integrity="sha384-b5kHyXgcpbZJO/tY9Ul7kGkf1S0CWuKcCD38l8YkeH8z8QjE0GmW1gYU5S9FOnJ0" crossorigin="anonymous") 

    script.
      let slideIndex = 0;
      const openModalImage = () => document.getElementById("modalImage").style.display = "block"
      const closeModalImage = () => document.getElementById("modalImage").style.display = "none"
      const plusSlidesImage = (n) => showSlidesImage(slideIndex += n)
      const currentSlideImage = (n) => showSlidesImage(slideIndex = n)

      showSlidesImage(slideIndex);

      function showSlidesImage(n) {
        const slides = document.getElementsByClassName("modal-image-slides");
        const dots = document.getElementsByClassName("modal-image-dots");

        if (n > slides.length - 1) slideIndex = 0;
        if (n < 0) slideIndex = slides.length - 1;

        if (slides.length > 1) {
          for (let i = 0; i < slides.length; i++) {
            slides[i].style.display = "none";
            dots[i].className = dots[i].className.replace(" active", "");
          }
        }
        
        slides[slideIndex].style.display = "block";
        if (slides.length > 1) dots[slideIndex].className += " active";
      }
    
